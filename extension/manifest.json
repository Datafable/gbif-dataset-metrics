{
    "name": "GBIF dataset metrics",
    "version": "0.1",
    "description": "Enhance GBIF dataset pages with charts and metrics.",
    "author": "Datafable",
    "homepage_url": "https://github.com/datafable/gbif-dataset-metrics",

    "manifest_version": 2,
    "minimum_chrome_version": "20",
    
    "content_scripts": [
        {
            // Dataset homepage
            "matches": [
                "http://www.gbif.org/dataset/*"
            ],
            "exclude_matches": [
                "http://www.gbif.org/dataset",
                "http://www.gbif.org/dataset/",
                "http://www.gbif.org/dataset/search*",
                "http://www.gbif.org/dataset/*/*",
                "http://www.gbif.org/dataset/*/stats",
                "http://www.gbif.org/dataset/*/activity"
            ],
            "css": [
                "css/bootstrap-custom.css",
                "css/content.css"
            ],
            "js": [
                "js/jquery.min.js",
                "js/bootstrap-custom.min.js",
                "js/content.js",
                "js/home.js"
            ]
        },
        {
            // Dataset stats page
            "matches": [
                "http://www.gbif.org/dataset/*/stats"
            ],
            "css": [
                "css/bootstrap-custom.css",
                "css/content.css"
            ],
            "js": [
                "js/jquery.min.js",
                "js/bootstrap-custom.min.js",
                "js/d3.min.js",
                "js/content.js",
                "js/stats.js"
            ]
        },
        {
            // Dataset activity page
            "matches": [
                "http://www.gbif.org/dataset/*/activity"
            ],
            "css": [
                "css/c3.min.css",
                "css/content.css"
            ],
            "js": [
                "js/d3.min.js",
                "js/c3.min.js",
                "js/content.js",
                "js/activity.js"
            ]
        }
    ],
    "icons": {
        "128": "img/logo-128.png"
    }
}
